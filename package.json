{
  "name": "sovereignty",
  "version": "1.1.0",
  "description": "Pure Zen - Semantic, responsive WordPress theme with deep IndieWeb support. Fork of Autonomie.",
  "repository": {
    "type": "git",
    "url": "https://github.com/apermo/sovereignty.git"
  },
  "bugs": {
    "url": "https://github.com/apermo/sovereignty/issues"
  },
  "keywords": [
    "custom-menu",
    "custom-colors",
    "custom-header",
    "custom-logo",
    "featured-image-header",
    "flexible-header",
    "sticky-post",
    "microformats",
    "rtl-language-support",
    "translation-ready",
    "full-width-template",
    "post-formats",
    "threaded-comments",
    "footer-widgets",
    "one-column",
    "editor-style",
    "featured-images",
    "theme-options",
    "blog",
    "news",
    "photography",
    "wide-blocks"
  ],
  "authors": [
    {
      "name": "Christoph Daum",
      "url": "https://christoph-daum.com"
    },
    {
      "name": "Matthias Pfefferle",
      "url": "https://notiz.blog/"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/apermo/sovereignty",
  "scripts": {
    "build": "grunt",
    "watch": "grunt watch",
    "lint:js": "eslint 'assets/js/**/*.js'",
    "lint:css": "stylelint 'assets/sass/**/*.scss'",
    "lint:js:fix": "eslint --fix 'assets/js/**/*.js'",
    "lint:css:fix": "stylelint --fix 'assets/sass/**/*.scss'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.scss": "stylelint",
    "*.php": [
      "vendor/bin/phpcs"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@playwright/test": "^1.58.2",
    "@wordpress/eslint-plugin": "^21.0.0",
    "@wordpress/stylelint-config": "^23.0.0",
    "eslint": "^8.57.0",
    "grunt": "^1.5.2",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-contrib-compress": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-sass": "~2.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-sass": "^4.0.0",
    "grunt-string-replace": "^1.3.1",
    "grunt-wp-i18n": "^1.0.3",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7",
    "sass": "^1.51.0",
    "stylelint": "^16.0.0"
  }
}
